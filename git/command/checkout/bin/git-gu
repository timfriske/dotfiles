#!/usr/bin/env bash

# Git Checkout command
# ====================
# Tim Friske <me@tifr.de>
#
# Deps:: bash, env, git-checkout

set -o errexit -o nounset

# Does upstream branch differ from current branch? Without this check
# the current branch would be checked out in detached HEAD state if it
# had no upstream configured.
if [[ "$(git rev-parse --abbrev-ref "${1:-HEAD}@{upstream}")" != */"$(git branch --show-current)" ]]; then
  git checkout "${1:-HEAD}@{upstream}"
fi
