#!/usr/bin/env bash

# Git Tag command
# ===============
# Tim Friske <me@tifr.de>
#
# Deps:: bash, column, env, git-tag

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

git tag --list \
  --format='%(refname:short)%09%(taggerdate:iso8601-strict)' "${@}" \
  | column -s "$(printf '\t')" -t
