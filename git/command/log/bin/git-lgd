#!/usr/bin/env bash

# Git Log command
# ===============
# Tim Friske <me@tifr.de>
#
# Logs commits whose diff match fixed string, ignoring case.
#
# Deps:: bash, env, git-log

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

main() {
  local pattern="${1:-}" commit="${2:-HEAD}" args=("${@:3}")
  (
    cd "${GIT_PREFIX:-.}" \
      && git log -G"${pattern}" --regexp-ignore-case --oneline --decorate=auto "${commit}" -- "${args:-.}"
  )
}

main "${@}"
