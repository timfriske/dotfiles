#!/usr/bin/env bash

# Git Edit command
# ================
# Tim Friske <me@tifr.de>
#
# Deps:: bash, env, git-config

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

function main {
  local editor
  editor="$(git config core.editor)"
  "${editor:-${VISUAL:-${EDITOR:-true}}}" "${@}"
}

main "${@}"
