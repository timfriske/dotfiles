#!/usr/bin/env bash
#
# Git Location
# ============
# Tim Friske <tifr@me.de>
#
# Display the location, i.e. the _Git_ branch, tag or commit at which
# the symbolic ref `HEAD` points.
#
# Deps:: bash, env, git

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

function get_branch {
  git symbolic-ref --quiet --short "${ref:-HEAD}"
}

function get_tag {
  git describe --tags --exact-match "${ref:-HEAD}" 2> /dev/null
}

function get_commit {
  git rev-parse --short "${ref:-HEAD}"
}

function main {
  local fmt="${fmt:-|type|:|object|}"
  local tbr="${tbr:-branch}"
  local tta="${tta:-tag}"
  local tco="${tco:-commit}"
  local branch tag commit

  branch="$(get_branch)"
  if [[ -n "${branch:+x}" ]]; then
    fmt="${fmt/|type|/${tbr}}"
    fmt="${fmt/|object|/${branch}}"
    printf '%s\n' "${fmt}"
    exit 0
  fi

  tag="$(get_tag)"
  if [[ -n "${tag:+x}" ]]; then
    fmt="${fmt/|type|/${tta}}"
    fmt="${fmt/|object|/${tag}}"
    printf '%s\n' "${fmt}"
    exit 0
  fi

  commit="$(get_commit)"
  if [[ -n "${commit:+x}" ]]; then
    fmt="${fmt/|type|/${tco}}"
    fmt="${fmt/|object|/${commit}}"
    printf '%s\n' "${fmt}"
    exit 0
  fi

  exit 1
}

main "${@}"
