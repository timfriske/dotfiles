#!/usr/bin/env bash

# Git You command
# ===============
# Tim Friske <me@tifr.de>
#
# Resets the user's name, email and signing key in a Git repository's
# local configuration. The user is prompted for each setting with the
# previous value preset. If none of the settings exist locally the
# configuration file is not touched. The same goes if all settings
# stayed the same.
#
# Deps:: bash, env, git-config

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

function git_config_reset {
  local opt_val="$(git config "${1}.${2:+${2}.}${3}")"
  read -er -p "${1}${2:+${2}} ${3}: " -i "${opt_val}" opt_val
  if [[ -z "${opt_val:+x}" ]]; then
    git config --local --unset "${1}.${3}" || true
  else
    git config --local "${1}.${3}" "${opt_val}"
  fi
}

function main {
  local subsection="${1:-}" option
  for option in Name Email SigningKey; do
    git_config_reset User "${subsection}" "${option}"
  done
}

main "${@}"
