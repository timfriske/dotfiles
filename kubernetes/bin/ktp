#!/usr/bin/env bash

# Kubectl command
# ===============
# Tim Friske <me@tifr.de>
#
# Deps:: bash, env, kubectl, watch

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

if [[ -t 1 ]]; then
  watch --differences --errexit kubectl top pod "${@}"
else
  kubectl top pod "${@}"
fi
