#!/usr/bin/env bash

# LUKS Device Encryption command
# ==============================
# Tim Friske <me@tifr.de>
#
# Encrypts a device according to the LUKS Linux Unified Key Setup
# standard. That device is usually a portable USB drive but could also
# be a virtual block device accessed through a previously created loop
# file.
#
# Important note: By executing this program all files on the specified
# device are irrevocably erased. Make sure to have a working backup of
# the files.
#
# Important note: Executing this command usually requires administrator
# privileges. If you do not have permission to do so try to rerun this
# program with `sudo`, `su` etc. this time authenticating as a user
# with appropriate permissions.
#
# Deps:: bash, cryptsetup, env

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

function ensure_block_special_file {
    local file="${1:-${file:?required}}"
    if [[ ! -b "${file}" ]]; then
        echo >&2 Given file must be a block special device! Aborting...
        exit 1
    fi
}

# Creates a LUKS encrypted container with on-disk format version 2.
function modern_crypt {
    local device="${1:-${device:?required}}"
    ensure_block_special_file "${device}"
    local label="${2:-${label:-}}"
    cryptsetup \
      --verbose \
      --verify-passphrase \
      --cipher aes-xts-plain64 \
      --key-size 512 \
      --hash sha512 \
      --pbkdf pbkdf2 \
      --type luks2 \
      ${label:+--label "${label}"} \
      luksFormat \
      "${device}"
}

# Creates a LUKS encrypted container with on-disk format version 1.
function compat_crypt {
  local device="${1:-${device:?required}}"
  ensure_block_special_file "${device}"
  cryptsetup \
    --verbose \
    --verify-passphrase \
    --cipher aes-xts-plain64 \
    --key-size 512 \
    --hash sha512 \
    --type luks1 \
    luksFormat \
    "${device}"
}

function main {
  local style="${1:-${style:?required}}"
  local device="${2:-${device:?required}}"
  local label="${3:-${label:-}}"
  case "${style}" in
  modern) modern_crypt "${device}" "${label}" ;;
  compat) compat_crypt "${device}" ;;
  *)
    echo >&2 Style must be one of modern, compat! Aborting...
    exit 1
    ;;
  esac
}

main "${@}"
