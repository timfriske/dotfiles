#!/usr/bin/env bash

# Ppds command
# ============
# Tim Friske <me@tifr.de>
#
# Prints the parent directories starting from the current working
# directory upwards.
#
# Deps:: bash, env

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

main() {
  local folder="${PWD}"
  until [[ -z "${folder}" ]]; do
    printf '%q\n' "${folder}"
    folder="${folder%/*}"
  done
  if [ "${PWD}" != '/' ]; then
    echo '/'
  fi
}

main "${@}"
